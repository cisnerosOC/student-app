<% if @student.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@student.errors.count, "error") %> <%= t("error") %></h2>
 
    <ul>
    <% @student.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <%= form_for(@student) do |f| %>
    <div>
    <%= f.label :first_name, t("first_name") %> <br>
    <%= f.text_field :first_name %>
    </div>
    <div>
    <%= f.label :last_name, t("last_name")%> <br>
    <%= f.text_field :last_name %>
    </div>
    <%= f.fields_for :addresses do |ff| %>
      <%= ff.hidden_field :id  %>
      <%= ff.label :address1, t("address1") %> <br>
      <%= ff.text_field :address1 %><br>
      <%= ff.label :address2, t("address2")%> <br>
      <%= ff.text_field :address2 %><br>
      <%end %>
    
    <div class="actions"><%= f.submit %></div>
  <% end %>